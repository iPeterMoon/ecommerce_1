<?xml version="1.0" encoding="UTF-8"?>
<persistence version="3.0" 
             xmlns="https://jakarta.ee/xml/ns/persistence" 
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd">

    <persistence-unit name="ecommerceVideojuegosPU" transaction-type="RESOURCE_LOCAL">
        
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <class>entidades.Usuario</class>
        <class>entidades.Producto</class>
        <class>entidades.Videojuego</class>
        <class>entidades.Pedido</class>
        <class>entidades.Resena</class>
        <class>entidades.CarritoCompra</class>
        <class>entidades.Categoria</class>
        <class>entidades.Clasificacion</class>
        <class>entidades.Direccion</class>
        <class>entidades.Item</class>
        <class>entidades.Pago</class>
        <class>entidades.Plataforma</class>
        <class>enums.EstadoPedido</class>
        <class>enums.EstadoPago</class>
        <class>enums.MetodoPago</class>
        
        <properties>
            <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/ecommerceVideojuegos"/>
            <property name="jakarta.persistence.jdbc.user" value="tu_usuario_db"/>
            <property name="jakarta.persistence.jdbc.password" value="tu_contrasena_db"/>

            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"/>
            <property name="hibernate.show_sql" value="true"/> <property name="hibernate.format_sql" value="true"/> <property name="hibernate.hbm2ddl.auto" value="update"/>
        </properties>

    </persistence-unit>
</persistence>